#!/usr/bin/env sh
# Frontend and Backend pre-commit hooks
set -e  # Exit immediately if a command exits with non-zero status

echo "ğŸ” Running pre-commit checks..."

# Frontend checks
echo "ğŸ“± Checking Frontend (Next.js)..."
cd chronica-frontend
echo "   - TypeScript compilation check..."
tsc -b || { echo "âŒ Frontend TypeScript compilation failed!"; exit 1; }
echo "   - ESLint fix..."
npx eslint . --fix || { echo "âŒ Frontend ESLint failed!"; exit 1; }

# Backend checks  
echo "ğŸ”§ Checking Backend (NestJS)..."
cd ../chronica-backend
echo "   - TypeScript compilation check..."
tsc -b || { echo "âŒ Backend TypeScript compilation failed!"; exit 1; }
echo "   - ESLint fix..."
npm run lint || { echo "âŒ Backend ESLint failed!"; exit 1; }

echo "âœ… All pre-commit checks passed!" 